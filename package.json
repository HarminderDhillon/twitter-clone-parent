{
  "name": "twitter-clone",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["frontend"],
  "description": "A full-stack Twitter clone with Spring Boot backend and Next.js frontend",
  "scripts": {
    "start": "docker-compose up -d && sleep 5 && ./check-ports.sh",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "ports": "./check-ports.sh",
    "logs": "docker-compose logs -f",
    "logs:backend": "docker-compose logs -f backend",
    "logs:frontend": "docker-compose logs -f frontend",
    "logs:db": "docker-compose logs -f postgres",
    "build": "docker-compose build",
    "rebuild": "docker-compose build --no-cache",
    "clean": "docker-compose down -v",
    "status": "docker-compose ps"
  },
  "author": "Harminder Dhillon",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
} 